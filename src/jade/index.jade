	script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
	script(src='js/parse.js')
	script.
		$(document).ready(function(){
			buildCompanySection("news_amazon.xml","Amazon","#amazon-stories");
			buildCompanySection("news_cisco.xml","Cisco","#cisco-stories");
			buildCompanySection("news_emc.xml","EMC","#emc-stories");
			buildCompanySection("news_google.xml","Google","#google-stories");
			buildCompanySection("news_ibm.xml","IBM","#ibm-stories");
			buildCompanySection("news_microsoft.xml","Microsoft","#microsoft-stories");
			buildCompanySection("news_vmware.xml","VMWare","#vmware-stories");
		});

		function buildCompanySection(xmlFile,companyName,companyDiv){
			$.ajax({
				type: "GET",
				url: xmlFile,
				dataType: "text",
				success: function(xml){
					parseNews(xml,companyDiv,companyName);
				},
				error: function() {
					alert("An error occurred while processing XML file.");
				}
			});
		}